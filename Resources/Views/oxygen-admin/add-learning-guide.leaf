<body>

<div class="vertical-nav bg-dark" id="sidebar">
 #extend("oxygen-admin/base"):
 #endextend
</div>

<!-- Page content holder -->
<div class="page-content p-5" id="content">
  <!-- Toggle button -->
  <button id="sidebarCollapse" type="button" class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4"><i class="fa fa-bars mr-2"></i><small class="text-uppercase font-weight-bold">Hide Sidebar</small></button>

  <!-- Demo content -->
  <h2 class="display-4 text-dark">Add a Learning Guide</h2>
  </p>
  <div class="separator"></div>
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post">
                            <div class="row">
                                <div class="col">
                                <label for="title">UUID</label>
                                <input disabled="true"  type="text" class="form-control" placeholder="UUID will be automatically generated!">
                                </div>
                                <div class="col">
                                <label for="title">Title</label>
                                <input type="text" class="form-control"  name="title" id="title" placeholder="Learning Guide Title">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4 add-learning-guide-button"><i class="fa fa-bars mr-2"></i><small class="text-uppercase font-weight-bold">Add Learning Guide</small></button>
                        </form>           
                    </div>
                </div>
            </div>
        </div>  
</div>
    <!-- Optional JavaScript -->
